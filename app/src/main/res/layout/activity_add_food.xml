<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info1"
    tools:context=".InformationScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="0dp"
        android:text="Food Entry"
        android:textStyle="bold"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/FoodName"
        android:layout_width="168dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="84dp"
        android:text="Name of Food:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/EnterFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter name of food here!" />

    <TextView
        android:id="@+id/CalorieAmount"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="173dp"
        android:text="Amount of Calories:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/EnterCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="165dp"
        android:ems="10"
        android:inputType="number"
        android:text="Enter amount of calories here!" />

    <Button
        android:id="@+id/saveInformation"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="115dp"
        android:text="Send Information" />
    <Button
        android:id="@+id/deleteInformation"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="115dp"
        android:text="Delete Information" />


</RelativeLayout>